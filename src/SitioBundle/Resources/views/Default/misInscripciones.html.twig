{% extends "SitioBundle:Default:Base.html.twig" %}
{% block title %}Mis Inscripciones{% endblock %}
{% block stylesheets %}{% endblock %}
{% block javascripts %}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 moveHeader visible-lg">
            <h2 class="text-right text-bold"> Mis Inscripciones</h2>
        </div>
    </div>
    <br/>
    <table class="table table-bordered table-responsive table-striped">
        <thead>
            <tr style="background-color:#0f4bac !important;">
                <th>Producto</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Estado</th>
                <th>Descripcion</th>
            </tr>
        </thead>
        <tbody>
        {% for inscripcion in inscripciones %}
            <tr>
                <td>{{inscripcion.producto | title}}</td>
                <td>{{inscripcion.startingDate|date('d-m-Y') }}</td>
                <td>{{inscripcion.endDate|date('d-m-Y') }}</td>
                <td>{{inscripcion.status | title}}</td>
                <td>{{inscripcion.description}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
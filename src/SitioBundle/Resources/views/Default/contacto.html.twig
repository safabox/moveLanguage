{% extends "SitioBundle:Default:Base.html.twig" %}
{% block title %}Contacto{% endblock %}
{% block stylesheets %}{% endblock %}
{% block javascripts %}{% endblock %}
{% block contacto %}class="active"{% endblock %}
{% block body %}

<div class="container-fluid"> 
    <div class="row">
            <div class="col-lg-12 moveHeader visible-lg">
                <h1 class="text-right">Contacto</h1>
            </div>
    </div>
    <div class="row">
        <div class="col-sm-2 col-lg-2 visible-lg">
            <img class="img-responsive" src="{{ asset('img/contacto.jpg') }}" alt="" /> 
        </div>
        <div class="col-lg-4">
            <div class="col-lg-12">
                <h3 >Contacto</h3>
                <p class="text-left">
                    ¿Quiéres contactarte con nosotros? Envíanos un mensaje con tus inquietudes o comunícate telefónicamente.
                    <br>Te Esperamos! 
                </p>
                <p class="text-left">Equipo de <strong>Move Language</strong></p>
            </div>
            <div class="col-lg-12">
                <!--
                <h3>Direccion</h3>
                <p>Florida xxx
                   <br>
                   CP: xxxxxx
                   <br>
                   Ciudad Autonoma de Buenos Aires
                   <br>
                   Argentina
                </p>
                <h3>Email</h3>
                <p>balanguagegroup@balanguagegroup.com</p>
                -->
                <h3>Telefono</h3>
                <p> (+5411) 4328 0404
                    <br>
                    (+5411) 4328 0653
                </p>
                <h3>Social</h3>
                <p>
                    <a class="btn btn-social-icon btn-twitter" href="https://twitter.com/balg_argentina" target="_blank">
                            <i class="fa fa-twitter"></i>
                    </a>
                    <a class="btn btn-social-icon btn-facebook" href="https://www.facebook.com/BaLanguageGroup/" target="_blank">
                        <i class="fa fa-facebook"></i>
                    </a>
                    <a class="btn btn-social-icon btn-instagram" href="https://www.instagram.com/balanguagegroup/" target="_blank">
                        <i class="fa fa-instagram"></i>
                    </a>
                    <a class="btn btn-social-icon btn-linkedin" href="https://www.linkedin.com/company/1831286?trk=tyah&trkInfo=clickedVertical%3Acompany%2CentityType%3AentityHistoryName%2CclickedEntityId%3Acompany_1831286%2Cidx%3A0" target="_blank">
                        <i class="fa fa-linkedin"></i>
                    </a>
                </p>
            </div>
        </div>  


        
        <div class="col-lg-6 col-sm-4">
            <h3>Mensaje</h3>
            <div class="col-sm-offset-1 col-lg-11">
                {% for mensaje in app.session.flashbag.get('info') %}
                    
                    <div class="alert alert-success alert-dismissible" role="alert">
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                      {{ mensaje }}
                    </div>
                {% endfor %}
                
                <form class="form-horizontal" method="POST">                
                    <div class="form-group">
                        <!--<label class="control-label col-sm-2" for="name"> Nombre: </label>-->
                        <div class="col-sm-12">
                            <input type="text" class="form-control" name="name" id="name" placeholder="Nombre"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <!--<label class="control-label col-sm-2" for="mail"> Email: </label>-->
                        <div class="col-sm-12">
                            <input type="email" class="form-control" name="mail" id="mail" placeholder="nombre@dominio.com" pattern="^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$" required/>
                        </div>
                    </div>
                    <div class="form-group">
                        <!--<label class="control-label col-sm-2" for="message"> Mensaje: </label>-->
                        <div class="col-sm-12">
                            <textarea class="form-control" name="message" id="message" rows="10" placeholder="Mensaje"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-0 col-sm-12">
                            <button type="submit" class="btn btn-lg btn-success">Enviar Mensaje!</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
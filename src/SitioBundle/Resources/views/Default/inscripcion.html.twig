{% extends "SitioBundle:Default:Base.html.twig" %}
{% block title %}Registrar{% endblock %}
{% block stylesheets %}{% endblock %}
{% block javascripts %}{% endblock %}
{% block body %}
<div class="container-fluid">
    <div class="row">
            <div class="col-lg-12 moveHeader visible-lg">
                <h2 class="text-right text-bold">Inscripci√≥n</h2>
            </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
    {% for mensaje in app.session.flashbag.get('info') %}
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{ mensaje }}
        </div>
        {% endfor %}
        {% for mensaje in app.session.flashbag.get('error') %}
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        {{ mensaje }}
        </div>
    {% endfor %}
        </div>
    </div>
    <form class="form-horizontal" action="{{ path('sitio_inscripcion') }}" method="post" {{ form_enctype(formulario) }}>    
        <div class="row">    
            <div class="col-md-offset-4 col-md-4">
                {{ form_errors(formulario) }}
                <br/>
                {{ form_widget(formulario.producto,{ 'attr':{'class' : 'form-control','placeholder':'producto'} } )}}
                
            </div>
        </div>
        <div class="row">    
            <div class="col-md-offset-4 col-md-4">
                <input class="btn btn-success btn-block" style="font-weight:bold;border-radius:20px;" type="submit" value="Inscribirse"/>
            </div>
        </div>
    </form>
    
        
    
    
    
</div>
{% endblock %}

